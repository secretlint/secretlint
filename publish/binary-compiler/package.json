{
  "private": true,
  "name": "@secretlint/binary-compiler",
  "version": "0.7.4",
  "description": "A binary compiler for secretlint.",
  "homepage": "https://github.com/secretlint/secretlint/tree/master/packages/@secretlint/binary-compiler/",
  "bugs": {
    "url": "https://github.com/secretlint/secretlint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/secretlint/secretlint.git"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "keywords": [
    "secretlint",
    "binary"
  ],
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "bun build src/entry.ts --compile --minify --sourcemap --outfile dist/secretlint",
    "clean": "tsc --build --clean",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "./dist/secretlint --help && ./dist/secretlint \"**/*\"",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "devDependencies": {
    "@types/bun": "^1.0.12",
    "@types/node": "^20.12.5",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@secretlint/secretlint-formatter-sarif": "workspace:*",
    "@secretlint/secretlint-rule-preset-recommend": "workspace:*",
    "secretlint": "workspace:*"
  }
}
