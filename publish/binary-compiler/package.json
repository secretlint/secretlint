{
    "name": "@secretlint/binary-compiler",
    "version": "0.7.4",
    "description": "A binary compiler for secretlint.",
    "homepage": "https://github.com/secretlint/secretlint/tree/master/packages/@secretlint/binary-compiler/",
    "bugs": {
        "url": "https://github.com/secretlint/secretlint/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/secretlint/secretlint.git"
    },
    "license": "MIT",
    "author": "azu",
    "files": [
        "bin/",
        "lib/",
        "src/"
    ],
    "keywords": [
        "secretlint",
        "binary"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=production tsc -p .",
        "dist": "npm run build && node lib/build.js",
        "clean": "rimraf lib/",
        "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
        "prepublish": "npm run --if-present build",
        "test": "npm run build",
        "watch": "tsc -p . --watch"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": false,
        "tabWidth": 4
    },
    "devDependencies": {
        "@types/mocha": "^7.0.1",
        "@types/node": "^13.7.4",
        "cross-env": "^7.0.0",
        "mocha": "^7.0.1",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "ts-node": "^8.6.2",
        "ts-node-test-register": "^8.0.1",
        "typescript": "^3.8.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "nexe": "^4.0.0-beta.3",
        "readdir-withfiletypes": "^1.0.2",
        "secretlint": "*",
        "@secretlint/secretlint-rule-preset-recommend": "*"
    }
}
