{
    "name": "@secretlint/quick-start",
    "version": "0.6.2",
    "description": "Quick Stater CLI for secretlint.",
    "keywords": [
        "secretlint",
        "cli",
        "node.js"
    ],
    "homepage": "https://github.com/secretlint/secretlint/tree/master/packages/@secretlint/quick-start/",
    "bugs": {
        "url": "https://github.com/secretlint/secretlint/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/secretlint/secretlint.git"
    },
    "license": "MIT",
    "author": "azu",
    "files": [
        "bin/",
        "lib/",
        "src/"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "bin": {
        "quick-start": "./bin/quick-start.js"
    },
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=production tsc -p .",
        "clean": "rimraf lib/",
        "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
        "prepublish": "npm run --if-present build",
        "test": "expected-exit-status 1 --command 'node bin/quick-start.js \"test/**/*\"'",
        "watch": "tsc -p . --watch"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": false,
        "tabWidth": 4
    },
    "dependencies": {
        "secretlint": "^0.6.0",
        "@secretlint/secretlint-rule-preset-recommend": "^0.6.0"
    },
    "devDependencies": {
        "@types/mocha": "^7.0.1",
        "@types/node": "^13.7.7",
        "cross-env": "^7.0.0",
        "mocha": "^7.1.0",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3",
        "expected-exit-status": "^1.0.2"
    },
    "publishConfig": {
        "access": "public"
    }
}
