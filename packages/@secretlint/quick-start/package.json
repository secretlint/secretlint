{
  "name": "@secretlint/quick-start",
  "version": "10.2.2",
  "description": "Quick Stater CLI for secretlint.",
  "keywords": [
    "secretlint",
    "cli",
    "node.js"
  ],
  "homepage": "https://github.com/secretlint/secretlint/tree/master/packages/@secretlint/quick-start/",
  "bugs": {
    "url": "https://github.com/secretlint/secretlint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/secretlint/secretlint.git"
  },
  "license": "MIT",
  "author": "azu",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      },
      "default": "./module/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./module/index.js",
  "types": "./module/index.d.ts",
  "bin": "./bin/quick-start.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "module/",
    "src/",
    "config/"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "prepublishOnly": "npm run clean && npm run build",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "node bin/quick-start.js \"**/*\" && exit 1 || exit 0",
    "watch": "tsc --build --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "dependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^10.2.2",
    "secretlint": "^10.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "prettier": "^2.8.8",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
