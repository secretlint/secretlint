{
  "compilerOptions": {
    /* Basic Options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "./module/",
    "target": "ES2022",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../secretlint-rule-aws"
    },
    {
      "path": "../secretlint-rule-gcp"
    },
    {
      "path": "../secretlint-rule-npm"
    },
    {
      "path": "../secretlint-rule-slack"
    },
    {
      "path": "../secretlint-rule-basicauth"
    },
    {
      "path": "../secretlint-rule-openai"
    },
    {
      "path": "../secretlint-rule-linear"
    },
    {
      "path": "../secretlint-rule-privatekey"
    },
    {
      "path": "../secretlint-rule-sendgrid"
    },
    {
      "path": "../secretlint-rule-shopify"
    },
    {
      "path": "../secretlint-rule-github"
    },
    {
      "path": "../secretlint-rule-1password"
    },
    {
      "path": "../secretlint-rule-filter-comments"
    },
  ]
}
