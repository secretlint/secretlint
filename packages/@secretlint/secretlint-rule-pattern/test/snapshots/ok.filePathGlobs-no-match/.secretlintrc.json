{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "AWS credentials in env files",
            "filePathGlobs": ["**/*.env", "**/.env*"],
            "pattern": "/aws_access_key_id|aws_secret_access_key/i"
          }
        ]
      }
    }
  ]
}