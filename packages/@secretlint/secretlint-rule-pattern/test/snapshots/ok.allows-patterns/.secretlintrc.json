{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "credentials",
            "patterns": [
              "/password\\s*=\\s*(?<password>[\\w\\d!@#$%^&(){}\\[\\]:\";'<>,.?/~`_+-=|]{1,256})\\b.*/gi",
              "/apikey\\s*=\\s*(?<apikey>[\\w\\d_-]{8,})\\b.*/gi",
              "/token\\s*=\\s*(?<token>[\\w\\d_-]{16,})\\b.*/gi"
            ]
          }
        ],
        "allows": ["foo-bar"]
      }
    }
  ]
}