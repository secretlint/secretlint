{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "lib/**",
        "module/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "snapshots/**"
      ],
      "env": [
        "UPDATE_SNAPSHOT"
      ]
    },
    "updateSnapshot": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "snapshots/**"
      ],
      "env": [
        "UPDATE_SNAPSHOT"
      ]
    },
    "secretlint": {
      "dependsOn": [
        "build"
      ]
    }
  }
}
